@page
@model Agenda_NetRazorP.Pages.Contacts.IndexModel
@{
    ViewData["Title"] = "Contactos";
}


<div class="container">
    <div class="row">
        <div class="col-9">
            <h2 class="text-info"> Mis Contactos</h2>
        </div>
        <div class="col-3">
            <a class="btn btn-secondary" asp-page="/Contacts/New"> Nuevo Contacto</a>
        </div>
    </div>
</div>

<div>
    <br />
    <br />

    @if (Model.contacts.Count() > 0)
    {
        <table id="tblContacts" class="table table-bordered" style="width: 100%">
            <thead>
                <tr>
                    <th></th>
                    <th>@Html.DisplayNameFor(m => m.contacts.FirstOrDefault().Id)</th>
                    <th>@Html.DisplayNameFor(m => m.contacts.FirstOrDefault().Name)</th>
                    <th>@Html.DisplayNameFor(m => m.contacts.FirstOrDefault().Email)</th>
                    <th>@Html.DisplayNameFor(m => m.contacts.FirstOrDefault().PhoneNumber)</th>
                    <th>@Html.DisplayNameFor(m => m.contacts.FirstOrDefault().CreationDate)</th>
                    <th>@Html.DisplayNameFor(m => m.contacts.FirstOrDefault().Category)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var contacts in Model.contacts)
                {
                    <tr>
                        <td><img src="~/css/Img/contact.png" class="text-center" /></td>
                        <td>@Html.DisplayFor(m => contacts.Id)</td>
                        <td>@Html.DisplayFor(m => contacts.Name)</td>
                        <td>@Html.DisplayFor(m => contacts.Email)</td>
                        <td>@Html.DisplayFor(m => contacts.PhoneNumber)</td>
                        <td>@Html.DisplayFor(m => contacts.CreationDate)</td>
                        <td>@Html.DisplayFor(m => contacts.Category.Name)</td>
                        <td>
                            <a class="btn btn-success" asp-page="../Contacts/Detail" asp-route-id="@contacts.Id"> Ver más</a>
                            <a class="btn btn-warning" asp-page="../Contacts/Edit" asp-route-id="@contacts.Id"> Editar </a>
                            <a class="btn btn-danger" asp-page="../Contacts/Delete" asp-route-id="@contacts.Id"> Borrar </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    }
    else
    {
        <p>No hay contactos para mostrar</p>
    }
</div>